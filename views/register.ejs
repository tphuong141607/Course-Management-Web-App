<% include ./partials/header %>

<link rel='stylesheet' href='/stylesheets/form.css'>	
<link rel='stylesheet' href='/stylesheets/login.css'>	

<div class='bg-image'></div>

<div class='container'>
	<div class='form-div'>
		<h1>Register</h1>

		<div class='account'> 
			<button class='student accountSelected'> Student </button> |
			<button class='faculty'> Faculty </button>
		</div>
		
		<form action='/register' method='POST'>
			<input type="hidden" id="account_type" name="accountType" value="student">
			
			<div class='form-group pt-4'>
				<input type='text' name='username' placeholder='username' class='form-control' required>
			</div>

			<div class='form-group'>
				<input type='password' name='password' placeholder='password' class='form-control' required>
			</div>
			
			<div class='form-group'>
				<input type='text' name='fname' placeholder='first name' class='form-control' required>
			</div>
			
			<div class='form-group'>
				<input type='text' name='lname' placeholder='last name' class='form-control' required>
			</div>
			
			<div class='form-group'>
				<input type='number' name='phone' placeholder='phone number' class='form-control' required>
			</div>
			
			<div class='form-group'>
				<input type='Date' class='form-control' name='DOB' placeholder='Date of Birth' required>
			</div>
		
			<button>Sign up</button>
			<button><a class='btnLink' href='/login'>Have an account? Login</a></button>
		</form>

	</div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script type="text/javascript" src="/supportingScripts/loginSwitch.js"></script>

<% include ./partials/footer %>
