<% include ../partials/header %>
<% include ../partials/nav %>

<link rel="stylesheet" type="text/css" href='/stylesheets/assignment.css'/>

<div class='container containerCus'>
	<form class='formDiv' action='/announcements' method='POST'>
		<h1>Add new a announcement</h1>
	
		
		<div class='form-group pt-2'>
			<label>Title</label>
			<input type='text' class='form-control' name='announcement[title]' placeholder='title' required>
		</div>
		
		<div class='form-group field'>
			<label>Date Scheduled to post:</label>
			<input type='Date' class='form-control' name='announcement[dateScheduled]' placeholder='When do you want to post the announcement?' required>
		</div>
		
		<div class='form-group field'>
			<label>Body</label>
			<textarea type='text'rows='9' class='form-control' name='announcement[body]' placeholder='description' required></textarea>
		</div>

		<button type="submit" class="btn btn-primary">Submit</button>
		<button type="cancel" class="btn btn-primary" onclick="window.location='/announcements'; return false;">Cancel</button>
	</form>
</div>

